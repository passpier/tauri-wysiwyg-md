{
  "identifier": "main-capability",
  "description": "Allow main window to use necessary features.",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "dialog:default",
    "os:default",
    "os:allow-locale",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "allow-all-commands"
  ]
}
